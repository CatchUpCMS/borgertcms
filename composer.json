{
    "name": "odirleiborgert/borgert-cms",
    "description": "Borgert CMS - Laravel Framework.",
    "keywords": ["framework", "cms", "borgert", "rocket", "content management system", "open source", "laravel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Odirlei Borgert",
            "email": "odirleiborgert@gmail.com"
        }
    ],
    "type": "project",
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
    "require": {
        "php": ">=5.6.4",
        "amranidev/scaffold-interface": "^1.7",
        "laravel/framework": "5.4.*",
        "caffeinated/modules": "^4.0",
        "caffeinated/themes": "^3.0",
        "cviebrock/eloquent-sluggable": "^4.0",
        "doctrine/dbal": "^2.5",
        "filp/whoops": "^2.0",
        "thomaswelton/laravel-gravatar": "^1.1",
        "kyslik/column-sortable": "5.4.*",
        "laravel/passport": "^2.0",
        "wikimedia/composer-merge-plugin": "^1.2"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "laracasts/generators": "^1.1",
        "backpack/generators": "^1.1",
    "barryvdh/laravel-ide-helper": "^2.1",
    "barryvdh/laravel-debugbar": "^2.0"
    },
  "extra": {
    "merge-plugin": {
      "include": [
        "app/Modules/*/composer.json"
      ]
    },
    "installer-paths": {
      "App/Modules/{$name}": [
        "rakko/core",
        "rakko/origami",
        "rakko/kantoku",
        "rakko/menus",
        "rakko/kagi"
      ],
      "resources/themes/{$name}": [
      ]
    }
  },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": []
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    }
}
